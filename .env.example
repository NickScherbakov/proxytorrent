# ProxyTorrent Environment Configuration
# Copy this file to .env and customize for your environment

# ============================================================================
# Security Settings
# ============================================================================

# Enable authentication (set to true in production)
SECURITY__AUTH_ENABLED=false

# HMAC secret for request signing (generate with: openssl rand -hex 32)
SECURITY__HMAC_SECRET=change-me-in-production

# Comma-separated list of valid bearer tokens
# SECURITY__BEARER_TOKENS=token1,token2,token3

# ============================================================================
# Proxy/VPN Settings
# ============================================================================

# Enable proxy usage (enforce all requests through proxy)
PROXY__PROXY_ENABLED=false

# Proxy type: http, https, or socks5
PROXY__PROXY_TYPE=socks5

# Proxy connection details
PROXY__PROXY_HOST=
PROXY__PROXY_PORT=

# Proxy authentication (optional)
# PROXY__PROXY_USERNAME=
# PROXY__PROXY_PASSWORD=

# ============================================================================
# Fetcher Settings
# ============================================================================

# Connection timeout in seconds
FETCHER__CONNECT_TIMEOUT=10

# Read timeout in seconds
FETCHER__READ_TIMEOUT=30

# Maximum response size in bytes (default: 50 MiB)
FETCHER__MAX_SIZE=52428800

# Verify SSL certificates
FETCHER__VERIFY_SSL=true

# User agent for requests
FETCHER__USER_AGENT=ProxyTorrent/0.1.0

# ============================================================================
# Torrent Settings
# ============================================================================

# Create private torrents (recommended)
TORRENT__PRIVATE_TRACKER=true

# Torrent piece size in bytes
TORRENT__PIECE_SIZE=262144

# Tracker announce URL (optional)
# TORRENT__ANNOUNCE_URL=http://tracker.example.com:8080/announce

# Enable torrent encryption
TORRENT__ENCRYPTION_ENABLED=true

# Upload rate limit in bytes/sec (0 = unlimited)
TORRENT__UPLOAD_RATE_LIMIT=0

# Download rate limit in bytes/sec (0 = unlimited)
TORRENT__DOWNLOAD_RATE_LIMIT=0

# Maximum peer connections
TORRENT__MAX_CONNECTIONS=200

# ============================================================================
# Storage Settings
# ============================================================================

STORAGE__BASE_PATH=./data
STORAGE__CONTENT_PATH=./data/content
STORAGE__TORRENT_PATH=./data/torrents
STORAGE__RESUME_PATH=./data/resume

# ============================================================================
# Cache Settings
# ============================================================================

CACHE__CACHE_ENABLED=true
CACHE__DEFAULT_TTL=3600
CACHE__MAX_TTL=86400

# Redis URL for distributed cache (optional)
# CACHE__REDIS_URL=redis://localhost:6379/0

# ============================================================================
# Rate Limiting
# ============================================================================

RATE_LIMIT__RATE_LIMIT_ENABLED=true
RATE_LIMIT__REQUESTS_PER_MINUTE=60
RATE_LIMIT__REQUESTS_PER_HOUR=1000
RATE_LIMIT__REQUESTS_PER_IP_MINUTE=100

# ============================================================================
# Database Settings
# ============================================================================

# SQLite (default for MVP)
DATABASE__DATABASE_URL=sqlite+aiosqlite:///./data/proxytorrent.db

# PostgreSQL (optional, for production)
# DATABASE__DATABASE_URL=postgresql+asyncpg://user:password@localhost/proxytorrent

DATABASE__ECHO_SQL=false

# ============================================================================
# Monitoring and Logging
# ============================================================================

MONITORING__LOG_LEVEL=INFO
MONITORING__JSON_LOGS=true
MONITORING__MASK_SENSITIVE=true
MONITORING__METRICS_ENABLED=true

# ============================================================================
# API Settings
# ============================================================================

APP_NAME=ProxyTorrent
APP_VERSION=0.1.0
DEBUG=false

API_PREFIX=/v1
HOST=0.0.0.0
PORT=8000
